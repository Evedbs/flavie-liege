---
// src/layouts/Layout.astro
import "../styles/global.css";
import NavigationBanner from "../components/NavigationBanner.astro";
import Footer from "../components/Footer.astro";

// Define the props the layout will accept
export interface Props {
  title: string;
  description: string;
}

// Get the props, with default values for safety
const {
  title = "Flavie Liège | EFEL COMMUNICATION - Freelance Communication & Évènementiel",
  description = "Freelance en communication et évènementiel, je rends vos projets rayonnants. Spécialisée en management du sport. Basée en France.",
} = Astro.props;

// Create a full page title
const pageTitle = `${title} | EFEL COMMUNICATION`;
---

<!doctype html>
<html lang="fr">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="src/assets/logo.svg" />
    <meta name="generator" content={Astro.generator} />

    <title>{pageTitle}</title>
    <meta name="description" content={description} />

    <link rel="canonical" href={Astro.url.href} />

    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={Astro.url.href} />
    <meta property="og:image" content="src/assets/flavie-liege.jpg" />
    <meta property="og:site_name" content="EFEL COMMUNICATION" />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content="src/assets/flavie-liege.jpg" />
  </head>
  <body class="overflow-x-hidden">
    <NavigationBanner />
    <main>
      <slot />
    </main>
    <Footer />
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>

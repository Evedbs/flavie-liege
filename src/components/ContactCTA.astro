---
import Button from "./Button.astro";

const { title, sentence, containerClasses, href, label } = Astro.props;
---

<section
  class={`py-8 px-4 lg:p-16 flex flex-col gap-4 text-center items-center ${containerClasses}`}
>
  <div class="flex flex-col items-center">
    <p class="text-2xl mb-2">{title}</p>
    <p class="paragraph">
      {sentence}
    </p>
  </div>
  <Button label={label} href={href} />
</section>
